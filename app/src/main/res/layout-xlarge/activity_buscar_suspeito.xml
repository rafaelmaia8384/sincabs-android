<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:gravity="center_horizontal|center_vertical"
    android:weightSum="100"
    tools:context="br.com.sincabs.appsincabs.PerfilSuspeitoActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:background="@color/colorWhite"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar suspeito"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_close"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="fecharJanela"/>

        </RelativeLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:ms_background_color="http://schemas.android.com/tools">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="10dp">


                <EditText
                    android:id="@+id/editTextNomeAlcunha"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/background_edittext"
                    android:inputType="textCapWords"
                    android:ems="10"
                    android:hint="Nome ou alcunha"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layoutMaisOpcoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:layout_marginTop="0dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp"
                        android:text="Áreas de atuação:"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/checkBoxAC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="AC"/>

                            <CheckBox
                                android:id="@+id/checkBoxAL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="AL"/>

                            <CheckBox
                                android:id="@+id/checkBoxAM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="AM"/>

                            <CheckBox
                                android:id="@+id/checkBoxAP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="AP"/>

                            <CheckBox
                                android:id="@+id/checkBoxBA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="BA"/>

                            <CheckBox
                                android:id="@+id/checkBoxCE"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="CE"/>

                            <CheckBox
                                android:id="@+id/checkBoxDF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="DF"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/checkBoxES"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="ES"/>

                            <CheckBox
                                android:id="@+id/checkBoxGO"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="GO"/>

                            <CheckBox
                                android:id="@+id/checkBoxMA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="MA"/>

                            <CheckBox
                                android:id="@+id/checkBoxMG"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="MG"/>

                            <CheckBox
                                android:id="@+id/checkBoxMS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="MS"/>

                            <CheckBox
                                android:id="@+id/checkBoxMT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="MT"/>

                            <CheckBox
                                android:id="@+id/checkBoxPA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="PA"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/checkBoxPB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="PB"/>

                            <CheckBox
                                android:id="@+id/checkBoxPE"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="PE"/>

                            <CheckBox
                                android:id="@+id/checkBoxPI"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="PI"/>

                            <CheckBox
                                android:id="@+id/checkBoxPR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="PR"/>

                            <CheckBox
                                android:id="@+id/checkBoxRJ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="RJ"/>

                            <CheckBox
                                android:id="@+id/checkBoxRN"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="RN"/>

                            <CheckBox
                                android:id="@+id/checkBoxRO"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="RO"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/checkBoxRR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="RR"/>

                            <CheckBox
                                android:id="@+id/checkBoxRS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="RS"/>

                            <CheckBox
                                android:id="@+id/checkBoxSC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="SC"/>

                            <CheckBox
                                android:id="@+id/checkBoxSE"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="SE"/>

                            <CheckBox
                                android:id="@+id/checkBoxSP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="SP"/>

                            <CheckBox
                                android:id="@+id/checkBoxTO"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="TO"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp"
                        android:text="Atividades criminosas:"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <CheckBox
                            android:id="@+id/check_furto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="55"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Furto"/>

                        <CheckBox
                            android:id="@+id/check_roubo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="45"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Roubo"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <CheckBox
                            android:id="@+id/check_roubo_bancos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="55"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Roubo a bancos/afins"/>

                        <CheckBox
                            android:id="@+id/check_trafico"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="45"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Tráfico"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <CheckBox
                            android:id="@+id/check_homicidio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="55"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Homicídio/tentativa"/>

                        <CheckBox
                            android:id="@+id/check_latrocinio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="45"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Latrocínio"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <CheckBox
                            android:id="@+id/check_estupro"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="55"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Estupro"/>

                        <CheckBox
                            android:id="@+id/check_estelionato"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="45"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Estelionato"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <CheckBox
                            android:id="@+id/check_posse_porte"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="55"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Posse/porte de arma"/>

                        <CheckBox
                            android:id="@+id/check_receptacao"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="45"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Receptação"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <CheckBox
                            android:id="@+id/check_contrabando"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="55"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Contrabando"/>

                        <CheckBox
                            android:id="@+id/check_outros"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="45"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="Outros"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp"
                        android:text="Características físicas:"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <Spinner
                            android:layout_marginRight="5dp"
                            android:id="@+id/spinnerCrtCorPele"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="50"

                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:background="@drawable/background_spinner"
                            android:entries="@array/caracteristicas_busca_cor_pele" />

                        <Spinner
                            android:layout_marginLeft="5dp"
                            android:id="@+id/spinnerCrtCorOlhos"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="50"

                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:background="@drawable/background_spinner"
                            android:entries="@array/caracteristicas_busca_cor_olhos" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <Spinner
                            android:layout_marginRight="5dp"
                            android:id="@+id/spinnerCrtCorCabelos"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="50"

                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:background="@drawable/background_spinner"
                            android:entries="@array/caracteristicas_busca_cor_cabelos" />

                        <Spinner
                            android:layout_marginLeft="5dp"
                            android:id="@+id/spinnerCrtTipoCabelos"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="50"

                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:background="@drawable/background_spinner"
                            android:entries="@array/caracteristicas_busca_tipo_cabelos" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <Spinner
                            android:layout_marginRight="5dp"
                            android:id="@+id/spinnerCrtPorteFisico"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="50"

                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:background="@drawable/background_spinner"
                            android:entries="@array/caracteristicas_busca_porte_fisico" />

                        <Spinner
                            android:layout_marginLeft="5dp"
                            android:id="@+id/spinnerCrtEstatura"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="50"

                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:background="@drawable/background_spinner"
                            android:entries="@array/caracteristicas_busca_estatura" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <Spinner
                            android:layout_marginRight="5dp"
                            android:id="@+id/spinnerCrtDeficiente"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="50"

                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:background="@drawable/background_spinner"
                            android:entries="@array/caracteristicas_busca_possui_deficiencia" />

                        <Spinner
                            android:layout_marginLeft="5dp"
                            android:id="@+id/spinnerCrtPossuiTatuagem"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="50"

                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:background="@drawable/background_spinner"
                            android:entries="@array/caracteristicas_busca_possui_tatuagem" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/buttonMaisOpcoesDeBusca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="30dp"
                    android:autoLink="all"
                    android:text="@string/underline_mais_opcoes_de_busca"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/buttonMenosOpcoesDeBusca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="30dp"
                    android:autoLink="all"
                    android:text="@string/underline_menos_opcoes_de_busca"/>

                <Button
                    android:id="@+id/buttonContinuar"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/background_button"
                    android:textColor="@color/colorWhite"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:text="Buscar" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>
